<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_item_tipe_kedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image_item_tipe_kedua"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:src="@drawable/bg"
        android:layout_below="@+id/text_view_item_tipe_kedua" />

    <Button
        android:id="@+id/button_ok_item_tipe_kedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_item_tipe_kedua"
        android:layout_centerHorizontal="true"
        android:text="OK" />

</RelativeLayout>